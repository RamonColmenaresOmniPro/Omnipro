<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">omniblog_posts_grid.omniblog_posts_grid_data_source</item>
            <item name="deps" xsi:type="string">omniblog_posts_grid.omniblog_posts_grid_data_source</item>
        </item>
    <item name="spinner" xsi:type="string">omniblog_posts_columns</item>
    </argument>
    <dataSource name="omniblog_posts_grid_data_source">
        <argument name="class" xsi:type="string">OmniPro\OmniBlog\Ui\DataProvider\Posts\GridDataProvider</argument>
        <argument name="name" xsi:type="string">omniblog_posts_grid_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">post_id</argument>
            <argument name="requestFieldName" xsi:type="string">post_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">post_id</item>
                    </item>
                </item>
            </argument>
    </dataSource>
    <columns name="omniblog_posts_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">post_id</item>
                </item>
            </argument>
        </selectionsColumn>
    </columns>
</listing>