<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="omnipro" translate="label" sortOrder="300">           
            <label><![CDATA[ModuloCsv]]></label>
        </tab>
        <section id="omni" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Email Csv Reader</label>
            <tab>omnipro</tab>
            <resource>Omnipro_OmniBlog::config_omniblog</resource>
            <group id="blog" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Please Choose Your Email Template</label>
                <field id="template" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                    <comment>Email template is chosen based on theme fallback when "Default" option is selected.</comment>
                </field>   
            </group>
            <group id="cron" translate="label" type="boolean" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Enable/Disable cron</label>
                <field id="cronenable" translate="label" type="boolean" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>cron</label>
                </field>   
            </group>
        </section>
    </system>
</config>